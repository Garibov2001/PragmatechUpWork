@model ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<!-- Sign In Popup
================================================== -->
<div id="sign-in-dialog" class="zoom-anim-dialog dialog-with-tabs">

    <!--Tabs -->
    <div class="sign-in-form">

        <div class="popup-tabs-container">

            <!-- Register -->
            <div class="popup-tab-content" id="register">

                <!-- Welcome Text -->
                <div class="text-center">
                    <img width="350" class="text-center" src="~/images/logo_pragma.png">
                </div>

                <div class="welcome-text pt-4">
                    <h3>PragmatechUpWork</h3>
                    <span>Şifrəni yenilə</span>
                </div>

                <div asp-validation-summary="ModelOnly"></div>


                <!-- Form -->
                <form method="post" id="register-account-form" asp-route="user-reset-password">
                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />

                    <div class="input-with-icon-left">
                        <i class="icon-material-outline-lock"></i>
                        <input asp-for="Password" class="input-text with-border" placeholder="Yeni şifrə" required />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="input-with-icon-left">
                        <i class="icon-material-outline-lock"></i>
                        <input asp-for="ConfirmPassword" class="input-text with-border" placeholder="Təkrar yeni şifrə" required />
                        <span asp-validation-for="ConfirmPassword"></span>
                    </div>
                </form>

                <!-- Button -->
                <button class="margin-top-10 button full-width button-sliding-icon ripple-effect" type="submit" form="register-account-form">Bərpa et <i class="icon-material-outline-arrow-right-alt"></i></button>

            </div>

        </div>
    </div>
</div>
<!-- Sign In Popup / End -->
