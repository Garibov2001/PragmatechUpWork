@model LoginViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<!-- Sign In Popup
================================================== -->
<div id="sign-in-dialog" class="zoom-anim-dialog dialog-with-tabs">

    <!--Tabs -->
    <div class="sign-in-form">

        <div class="popup-tabs-container">

            <!-- Login -->
            <div class="popup-tab-content" id="login">


                <!-- Welcome Text -->
                <div class="text-center">
                    <img width="350" class="text-center" src="~/images/logo_pragma.png">
                </div>

                <div class="welcome-text pt-4">
                    <h3>PragmatechUpWork</h3>
                    <span>Hesabınız yoxdursa, <a asp-route="user-register">Qeydiyyatdan</a> keçin </span>
                </div>

                <div asp-validation-summary="ModelOnly">

                </div>

                <!-- Form -->
                <form method="post" asp-route="user-login">

                    @if (ViewBag.IsRegistered == true)
                    {
                        <div class="col-xl-12 col-lg-12 d-flex justify-content-center">
                            <div class="alert alert-success alert-dismissible fade show col-xl-10 col-lg-12 " role="alert">
                                Şifrəniz emailinizə göndərildi!
                                <a style="cursor: pointer;" class="close">&times;</a>
                            </div>
                        </div>
                    }


                    <div class="input-with-icon-left">
                        <i class="icon-material-outline-account-circle"></i>
                        <input type="text" class="input-text with-border" asp-for="UserName" placeholder="İstifadəçi adı" required />
                        <span asp-validation-for="UserName"></span>
                    </div>

                    <div class="input-with-icon-left">
                        <i class="icon-material-outline-lock"></i>
                        <input type="password" class="input-text with-border" asp-for="Password" placeholder="Şifrə" required />
                        <span asp-validation-for="Password"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <div class="checkbox">
                            <input type="checkbox" asp-for="RememberMe" id="two-step" checked="">
                            <label for="two-step"><span class="checkbox-icon"></span> Yadda saxla</label>
                        </div>
                        <div>
                            <a href="#"><label style="cursor: pointer;"><span class="checkbox-icon"></span> Şifrəni unutmusan?</label></a>
                        </div>
                    </div>

                    <!-- Button -->
                    <input value="Daxil ol" class="button full-width button-sliding-icon ripple-effect" type="submit" />
                </form>

            </div>

        </div>
    </div>
</div>
<!-- Sign In Popup / End -->
