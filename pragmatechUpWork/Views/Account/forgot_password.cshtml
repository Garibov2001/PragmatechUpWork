@model ForgotPasswordViewModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}



<!-- Sign In Popup
================================================== -->
<div id="sign-in-dialog" class="zoom-anim-dialog dialog-with-tabs">

    <!--Tabs -->
    <div class="sign-in-form">

        <div class="popup-tabs-container">

            <!-- Register -->
            <div class="popup-tab-content" id="register">

                <!-- Welcome Text -->
                <div class="text-center">
                    <img width="350" class="text-center" src="~/images/logo_pragma.png">
                </div>

                <div class="welcome-text pt-4">
                    <h3>PragmatechUpWork</h3>
                    <span>Şifrəni bərpa et</span>
                    <span>Şifrənizi xatırladız? Login səhifəsinə <a asp-route="user-login">get</a></span>
                </div>

                <div asp-validation-summary="ModelOnly">

                </div>


                <!-- Form -->
                <form method="post" id="register-account-form" asp-route="user-forgot-password">

                    @if (ViewBag.IsSuccess == true)
                    {
                        <div class="col-xl-12 col-lg-12 d-flex justify-content-center">
                            <div class="alert alert-success alert-dismissible fade show col-xl-12 col-lg-12 " role="alert">
                                Şifrəni bərpa etmə linki emailinizə göndərildi!
                                <a style="cursor: pointer;" class="close">&times;</a>
                            </div>
                        </div>
                    }

                    <span>Səhifədə qeydiyyatdan keçdiyiniz emailinizi yazın.</span>
                    <div class="input-with-icon-left">
                        <i class="icon-material-baseline-mail-outline"></i>
                        <input asp-for="Email" class="input-text with-border" placeholder="Email" required />
                        <span asp-validation-for="Email"></span>
                    </div>
                </form>

                <!-- Button -->
                <button class="margin-top-10 button full-width button-sliding-icon ripple-effect" type="submit" form="register-account-form">Bərpa et <i class="icon-material-outline-arrow-right-alt"></i></button>

            </div>

        </div>
    </div>
</div>
<!-- Sign In Popup / End -->
